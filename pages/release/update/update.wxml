  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">
      <!-- <view class="weui-cell ">
        我要招聘
      </view> -->
      <view class="weui-cell ">
        <input class="weui-input post-content"  disabled="true" bindtap="addName" value="{{jobName}}"/>
        <view class="arrow-right"></view>
      </view>
      <view class="weui-cell  ">
        <view class="weui-flex requires ">
          <view class="weui-flex__item">
            <picker bindchange="workPickerChange" value="{{workIndex}}" range="{{workExperienceArray}}">
              <view>经验要求</view>
              <view>{{workExperience}}</view>
            </picker>
          </view>
          <view class="weui-flex__item">
            <picker bindchange="educationPickerChange" value="{{educationIndex}}" range="{{educationArray}}">
              <view>最低学历</view>
              <view>{{educationLevel}}</view>
            </picker>

          </view>
          <view class="weui-flex__item">
            <picker bindchange="salaryPickerChange" value="{{salaryRange}}" range="{{salaryArray}}">
              <view>薪资范围</view>
              <view>{{salaryRange}}</view>
            </picker>

          </view>
        </view>
      </view>
    </view>


<!-- 
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell ">
        职位描述
      </view>
      <view class="weui-cell ">
        <input class="weui-input post-content" placeholder="请填写职位描述" bindtap="addDesc" disabled="true" value="{{jobInfo.jobDescription}}"/>
