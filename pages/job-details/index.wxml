<view class="container">
  <view class="page">
    <view class="page__bd ">



      <view class="weui-cells weui-cells_after-title ">
        <view class="weui-cell weui-cell_example ">
          <view class="weui-cell__hd ">
            <image src="{{icon}}" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;"></image>
          </view>
          <view class="weui-cell__bd title">{{jobName}}</view>
          <view class="weui-cell__ft">{{salaryRange}}</view>
        </view>
      </view>
      <!--地域，学历与工作经验-->
      <view class="weui-cells weui-cells_after-title basic">
        <view class="weui-cell">
          <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
            <image src='/images/location.png' class="icon" />
          </view>
          <view class="weui-cell__bd">
            <view>{{city}}，{{district}}</view>
          </view>
        </view>
        <view class="weui-cell education">
          <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
            <image src='/images/education.png' class="icon" />
          </view>
          <view class="weui-cell__bd">
            <view>{{educationLevel}}</view>
          </view>
        </view>
        <view class="weui-cell education">
          <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
            <image src='/images/experience.png' class="icon" />
          </view>
          <view class="weui-cell__bd">
            <view>{{workExperience}}</view>
          </view>
        </view>
      </view>
      <!--证书与状态-->

      <view class="weui-flex">
        <view class="weui-flex__item">
          <view class="weui-cell education">
            <view class="weui-cell__hd" style="position: relative;margin-right: 10px;">
              <image src='/images/experience.png' class="icon" />
            </view>
            <view class="weui-cell__bd certificate">
              {{certificates}}
              <!-- <view>厨师证，</view>
              <view>糕点证，</view>
              <view>西餐证</view> -->
            </view>
          </view>
        </view>
        <view>
          <button wx:if="{{deliveryStatus===1}}" class="weui-btn status" type="primary">已投递</button>
          <button wx:elif="{{deliveryStatus===2}}" class="weui-btn status" type="primary">不合适</button>
          <button wx:elif="{{deliveryStatus===3}}" class="weui-btn status" type="primary">邀请面试</button>
          <button wx:elif="{{deliveryStatus===4}}" class="weui-btn status" type="primary">已录用</button>
          <button wx:elif="{{deliveryStatus===5}}" class="weui-btn status" type="primary">等待结果</button>
          <button wx:else class="weui-btn status" type="primary">未投递</button>


        </view>
      </view>
      <!--职位详情-->
      <h1>职位详情</h1>
      <view class="position-desc">
        {{jobDescription}}
