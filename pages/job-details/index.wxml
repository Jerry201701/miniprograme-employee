      </view>
      <!--公司简介-->
      <view>
        <view class="weui-panel__bd">
          <view class="weui-media-box__title weui-media-box__title_in-text">{{companyName}}</view>
          <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
            <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
              <image class="weui-media-box__thumb" src="{{companyLogo}}" />
            </view>
            <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
              <!-- <view class="weui-media-box__title">{{companyName}}</view> -->
              <view class="weui-media-box__desc">{{description}}</view>
              <view>{{brand}} {{minStaff}}-{{maxStaff}}人</view>
            </view>
          </navigator>
        </view>
      </view>
      <!--工作地点-->
      <view class="weui-media-box__title weui-media-box__title_in-text">工作地点</view>
      <view class="weui-media-box__desc location" bindtap='goMap'>
        <view>
          {{address}}
        </view>
        <view>
          <image src="/images/map.png" class="map"></image>
        </view>
      </view>
      <view class='space'></view>
      <!--地图定位-->





      <!--编辑按钮-->
      <view class="edit">
      <view>
      <image src="/images/job/share.png" style="margin-right: 16px;vertical-align: middle;width:20px; height: 20px;float:left;"></image>
        <button open-type="share" type="default" style="float:left;">
          分享
        </button>
      </view>
      <view wx:if="{{applicantId>0}}" class="chat">
        <button class="weui-btn delivery-btn chat" type="primary" bindtap="chatWithEmployer">沟通一下</button>
      </view>
      <view class="delivery">
        <button class="weui-btn delivery-btn delivery-resume" type="primary" bindtap="openConfirm">投递简历</button>
      </view>

